<?xml version="1.0" encoding="utf-8"?>
<!--On va mettre aussi un layout ici pour activer le dataBinding car comme on ne fait plus de
onClick directement dans le xml mais coté kotlin -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".demoNavFragment.FragmentOne">

        <!--    On rajoute un linearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!--        On rajoute le bouton pour faire la connexion entre le fragmentOne et le fragmentTwo
                        On ne fait pas le onClick ici mais coté kotlin car déprécié (trop ambigue), on va juste lui mettre un id
            -->
            <Button
                android:id="@+id/btnOpenFragmentTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ouvrir fragmentTwo">

            </Button>

        </LinearLayout>


    </FrameLayout>

</layout>
